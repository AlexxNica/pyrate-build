CXX = g++
CXX_FLAGS = -Wall -pedantic
rule compile_link_exe_cpp
  command = $CXX $CXX_FLAGS ${opts} -MMD -MT $out -MF $out.d $in -o $out
  description = compile+link(cpp) $out
  depfile = $out.d
  deps = gcc

build obj/example10a.bin: compile_link_exe_cpp test.cpp foo.cpp
build all: phony obj/example10a.bin
